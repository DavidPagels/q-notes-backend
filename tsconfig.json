{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "noUnusedLocals": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}